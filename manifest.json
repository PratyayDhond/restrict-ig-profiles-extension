{
  "manifest_version": 3,
  "name": "Instagram User Blocker",
  "version": "1.0.0",
  "description": "Block specific Instagram users and redirect attempts to view their content. Maintain focus and productivity.",
  
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "scripting"
  ],
  
  "host_permissions": [
    "*://*.instagram.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["utils/instagram.js", "content-script.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "incognito": "spanning",
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["*://*.instagram.com/*"]
    }
  ]
}
